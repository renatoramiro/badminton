<%= form_for @arbitro, :html => { :multipart => true } do |f| %>
  <%= error_messages_for @arbitro %>
  <div class="row">
    <div class="span4">
      <h2>Informações do Árbitro</h2>
      <div class="field">
        <b><%= f.label :photo, "Foto:" %></b><br />
        <%= f.file_field :photo %>
      </div>
      <div class="field">
        <%- unless @arbitro.new_record? || !@arbitro.photo? -%>
          <%= image_tag @arbitro.photo.url, :class => "image" %>
          <%= f.check_box :image_delete %> <span style="color: #fff">Selecione para apagar a imagem.</span>
        <%- end -%>
      </div>
      <div class="field" style="margin-top: 20px;">
        <%= f.label :cursos_de_arbitragem %>
        <%= f.text_area :cursos_de_arbitragem, :cols => 80, :rows => 10 %>
      </div>
      <div class="field">
        <%= f.label :ano_do_curso_de_arbitragem %>
        <%= f.date_select :ano_do_curso_de_arbitragem, :discard_day => true, :discard_month => true,
                          :start_year => 1930,
                          :prompt => { :year => 'Selecione o ano' } %>
      </div>
    </div>
    <div class="span4">
      <h2>Informações Pessoais</h2>
      <div class="field">
        <%= f.label :nome %>
        <%= f.text_field :nome %>
      </div>
      <div class="field">
        <%= f.label :data_de_nascimento %>
        <%= f.date_select(:data_de_nascimento, :start_year => 1930,
                              :prompt => { :day => 'Dia', :month => 'Mês', :year => 'Ano' },
                              :order => [:day, :month, :year]) %>
      </div>
      <div class="field">
        <%= f.label :rg, "RG" %>
        <%= f.text_field :rg %>
      </div>
      <div class="field">
        <%= f.label :cpf, "CPF" %>
        <%= f.text_field :cpf %>
      </div>
      <div class="field">
        <%= f.label :email %>
        <%= f.text_field :email %>
      </div>
    </div>
    <div class="span4" style="margin-top: 42px;">
      <div class="field">
        <%= f.label :telefone %>
        <%= f.text_field :telefone %>
      </div>
      <div class="field">
        <%= f.label :celular %>
        <%= f.text_field :celular %>
      </div>
      <div class="field">
        <%= f.label :rua %>
        <%= f.text_field :rua, placeholder: "Rua" %>
      </div>
      <div class="field">
        <%= f.label :numero, "Número" %>
        <%= f.number_field :numero, min: 0, placeholder: "Número" %>
      </div>
      <div class="field">
        <%= f.label :complemento, "Complemento" %>
        <%= f.text_field :complemento, :placeholder => "Complemento" %>
      </div>
      <div class="field">
        <%= f.label :bairro %>
        <%= f.text_field :bairro, placeholder: "Bairro" %>
      </div>
      <div class="field">
        <%= f.label :cidade %>
        <%= f.text_field :cidade, placeholder: "Cidade" %>
      </div>
      <div class="field">
        <%= f.label :estado %>
        <%= f.text_field :estado, placeholder: "Estado" %>
      </div>
      <div class="field">
        <%= f.label :cep, "CEP" %>
        <%= f.text_field :cep, placeholder: "CEP" %>
      </div>
    </div>
  </div>
  <br />
  <div class="well">
    <div style="margin-left: 380px;">
      <%= f.submit "Enviar", :class => "btn" %>
    </div>
  </div>
  <%= f.hidden_field :user_id %>
<% end %>

<script type="text/javascript">
jQuery(function($){
   $("#arbitro_cpf").mask("999.999.999-99");
   $("#arbitro_telefone").mask("(99) 9999-9999");
   $("#arbitro_celular").mask("(99) 9999-9999");
   $("#arbitro_cep").mask("99999-999");
});
</script>