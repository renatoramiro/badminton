<%= show_notice(notice) %>
<div class="span10">
  <h1>Informações Detalhadas</h1>
  <div class="row well"> 
    <div class="span4">
      <h2>Informações do Técnico</h2>
      <p>
        <% if @tecnico.photo? %>
          <%= image_tag @tecnico.photo.url, :class => "image" %>
        <% else %>
          <%= image_tag 'no-image.png', :class => "image" %>
        <% end -%>
      </p>
      <p>
        <b>Intituição de ensino:</b>
        <%= @tecnico.intituicao_de_ensino %>
      </p>

      <p>
        <b>CREF:</b>
        <%= @tecnico.cref %>
      </p>
    </div>
    <div class="span5">
      <h2>Informações Pessoais</h2>
      <p>
        <b>Nome:</b>
        <%= @tecnico.nome %>
      </p>

      <p>
        <b>Data de nascimento:</b>
        <%= @tecnico.data_de_nascimento.strftime("%d/%m/%Y") %>
      </p>

      <p>
        <b>Telefone:</b>
        <%= @tecnico.telefone %>
      </p>

      <p>
        <b>Celular:</b>
        <%= @tecnico.celular %>
      </p>

      <p>
        <b>Email:</b>
        <%= @tecnico.email %>
      </p>

      <p>
        <b>Endereço completo:</b>
        <%= "#{@tecnico.rua}, #{@tecnico.numero}, #{@tecnico.bairro}, #{@tecnico.cidade}, #{@tecnico.estado} - #{@tecnico.cep}" %>
      </p>

      <p>
        <b>RG:</b>
        <%= @tecnico.rg %>
      </p>

      <p>
        <b>CPF:</b>
        <%= @tecnico.cpf %>
      </p>
    </div>
  </div>
  <%= link_to 'Editar', edit_tecnico_path(@tecnico), :class => "label label-warning" %> |
  <%= link_to 'Voltar', tecnicos_path, :class => "label label-inverse" %> | 
  <%= link_to "Relatório detalhado", relatorio_tecnico_path(:id => @tecnico.id), :class => 'btn btn-success' %>
</div>
