<%= show_notice(notice) %>
<div class="span10">
  <h1>Informações Detalhadas</h1>
  <div class="row well"> 
    <div class="span4">
      <h2>Informações do Atleta</h2>
      <p>
        <% if @atleta.photo? %>
          <%= image_tag @atleta.photo.url , :class => "image" %>
        <% else %>
          <%= image_tag "no-image.png", :class => "image" %>
        <% end -%>
      </p>
      <p>
        <b>Código:</b>
        <%= @atleta.codigo %>
      </p>
      <p>
        <b>Entidade filiada:</b>
        <%= @atleta.entidade_filiada %>
      </p>

      <p>
        <b>Ranking:</b>
        <%= @atleta.ranking %>
      </p>

      <p>
        <b>Categoria:</b>
        <%= @atleta.categoria %>
      </p>

      <p>
        <b>Modalidades:</b><br />
        <ul>
        <% @atleta.modalidades.each do |mod| %>
          <li><%= mod.tipo %></li>
        <% end -%>
        </ul>
      </p>
    </div>
    <div class="span5">
      <h2>Informações Pessoais</h2>
      <p>
        <b>Nome:</b>
        <%= @atleta.nome %>
      </p>

      <p>
        <b>Telefone:</b>
        <%= @atleta.telefone %>
      </p>

      <p>
        <b>Celular:</b>
        <%= @atleta.celular %>
      </p>

      <p>
        <b>Email:</b>
        <%= @atleta.email %>
      </p>

      <p>
        <b>Data de nascimento:</b>
        <%= @atleta.data_de_nascimento.strftime("%d/%m/%Y") %>
      </p>

      <p>
        <b>Endereço completo:</b>
        <%= "#{@atleta.rua}, #{@atleta.numero}, #{@atleta.bairro}, #{@atleta.cidade}, #{@atleta.estado} - #{@atleta.cep} (#{@atleta.complemento unless @atleta.complemento.nil?})" %>
      </p>

      <p>
        <b>RG:</b>
        <%= @atleta.rg %>
      </p>

      <p>
        <b>CPF:</b>
        <%= @atleta.cpf %>
      </p>

      <p>
        <b>Nome do pai:</b>
        <%= @atleta.nome_do_pai %>
      </p>

      <p>
        <b>Nome da mãe:</b>
        <%= @atleta.nome_da_mae %>
      </p>
    </div>
  </div>
  <%= link_to 'Editar', edit_atleta_path(@atleta), :class => "label label-warning" %> |
  <%= link_to 'Voltar', atletas_path, :class => "label label-inverse" %> | 
  <%= link_to "Relatório detalhado", relatorio_atleta_path(:id => @atleta.id), :class => "btn btn-success"  %>
  </div>
</div>