<div class="offset1 span8">
  <h1>Administração#início</h1>
  <p>
    <% if current_user.logotipo? %>
      <%= image_tag current_user.logotipo.url, :class => "logotipo" %>
    <% else %>
      <%= image_tag "no-image.png", :class => "logotipo" %>
    <% end -%>
  </p>
  <div class="row" style="margin-top: 20px;">
  	<div class="span2 alert alert-block">
      <p>Listar, Editar e Adicionar novo atleta.&nbsp;&nbsp;</p>
  		<%= link_to "Atletas", atletas_path, :class => "btn btn-large" %>
  	</div>
  	<div class="span2 alert alert-info alert-block">
      <p>Listar, editar e adicionar novo árbitro.</p>
  		<%= link_to "Árbitros", arbitros_path, :class => "btn btn-large" %>
  	</div>
  	<div class="span2 alert alert-block">
      <p>Listar, editar e adicionar novo técnico.</p>
  		<%= link_to "Técnicos", tecnicos_path, :class => "btn btn-large" %>
  	</div>
  </div>
</div>